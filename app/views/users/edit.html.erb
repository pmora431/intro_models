<h1>Editar Usuario</h1>

<% if @user.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@user.errors.count, "error") %> Este usuario o email ha sido utilizado.</h2>
<ul>
<% @user.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>

<form action="<%=users_update_path(@user)%>" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <label for="fname">Nombre:</label><br>
  <input type="text" id="fname" name="name" value="<%= @user.name %>"><br>
  <label for="lname">Email:</label><br>
  <input type="email" id="lname" name="email" value="<%= @user.email %>"><br><br>
  <input type="submit" value="Submit">
</form>


<%= link_to("Volver", users_index_path) %>